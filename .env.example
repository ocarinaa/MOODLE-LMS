# Moodle LMS Environment Configuration
# Copy this file to .env and customize

# Database Configuration (Development - No Password)
MARIADB_USER=bn_moodle
MARIADB_DATABASE=bitnami_moodle
# For development: ALLOW_EMPTY_PASSWORD=yes (no password needed)

# Production Database Security (uncomment for production)
# MARIADB_ROOT_PASSWORD=change_this_strong_password
# MARIADB_PASSWORD=change_this_password
# MOODLE_DATABASE_PASSWORD=change_this_password
# Remove ALLOW_EMPTY_PASSWORD=yes for production!

# Moodle Configuration
MOODLE_SITE_NAME=Moodle LMS
MOODLE_USERNAME=admin
MOODLE_PASSWORD=Admin@12345
MOODLE_EMAIL=admin@example.com

# Ports
HTTP_PORT=8080
HTTPS_PORT=8443

# Language Settings
MOODLE_LANG=en
MOODLE_LANGLIST=en,de

# Timezone
TZ=UTC